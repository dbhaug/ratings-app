<% provide(:title, 'Create a Category') %>
<h1>Create A Category</h1>

<div class="row">
	<div class="span6 offset3">
		<%=form_for(@category) do |f| %>
			<%= render 'shared/error_messages', object: f.object %>

			<%= f.label :title %>
			<%= f.text_field :title %>

			<%= f.submit "Create Category", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>