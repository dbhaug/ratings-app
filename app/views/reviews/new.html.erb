<% provide(:title, "Submit a Review") %>
<h1>Submit a Review for <%=Item.find(params[:item_id]).name%></h1>

<div class="row">
  <div class="offset2">
  	<% if signed_in? %>
	    <%= form_for(@review) do |f| %>

	      <%= f.label :review %>
	      <%= f.text_area :review %>

	      <%= f.hidden_field :item_id, {:value => params[:item_id]} %>

	      <%= f.hidden_field :user_id, {:value => current_user.id} %>

	      <%= f.submit "Submit Review!", class: "btn btn-large btn-primary" %>
	    <% end %>
	<% else %>
		Please Sign In!
	<% end %>
  </div>
</div>