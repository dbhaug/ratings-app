<% provide(:title, "Reviews Flagged for Moderation") %>
<div class="span3">
	<h1>Reviews Flagged for Moderation</h1>
	<% @reviews.each do |review| %>
		<div class="review<%=review.id%>">
			<%=review.review%><br/>
			<%= link_to "Unflag", review,
			method: :put, remote: true, format: :js, data: {confirm: "Unflag this comment?"} %>
			<%= link_to "Delete", review,
			method: :delete, remote: true, format: :js, data: {confirm: "Delete this comment?"} %><br/><br/>
		</div>
	<% end %>	
</div>