<div class="span4">
	<% if :category_id.nil? %>
		<% Item.find_by_category_id(:category_id).each do |item| %>
			<h2><%= item.name %></h2></br>
			<h5><%= item.avg_rating %></h5></br>
		<% end %>
	<% else %>
		<% Item.find_each do |item| %>
			<div class="row item">
				<div class="span4 offset<%=1%>">
					<%= item.name %><br/>
					Rating:
					<%= item.avg_rating %>
				</div>
			</div>
		<% end %>
	<% end %>
</div>